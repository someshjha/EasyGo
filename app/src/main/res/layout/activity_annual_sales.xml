<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <com.easygo.rbcdev.easygo.widgets.Header
        android:id="@+id/header"
        style="@style/Header"
        android:orientation="horizontal"
        custom:headerTitle="Annual Sales" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/white_rounded_background"
        android:layout_below="@+id/header"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">


        <Spinner
            android:id="@+id/sbEmployeePosition"
            android:entries="@array/employee_Position"
            style="@style/profileSpinner"/>

        <Spinner
            android:id="@+id/sbStoreAddress"
            android:entries="@array/sobeys_Addressess"
            style="@style/profileSpinner"/>


    </LinearLayout>

</RelativeLayout>