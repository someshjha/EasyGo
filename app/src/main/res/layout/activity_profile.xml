
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:stackFromBottom="true"
    android:transcriptMode="alwaysScroll" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#696969"
    tools:context=".MainActivity">


    <!--Starts Personal Information ( Name-Email-Phone-Street ) -->
    <LinearLayout
        android:id="@+id/personalInformation"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.easygo.rbcdev.easygo.widgets.Header
            android:id="@+id/header"
            style="@style/Header"
            android:orientation="vertical"
            custom:headerTitle="@string/title_activity_profile" />

        <TextView
            android:id="@+id/customerName"
            style="@style/matchParentText"
            android:text="Full Name"
            />

        <EditText
            android:id="@+id/txtUserName"
            style="@style/EditTextProfileUsername"
            />

        <TextView
            android:id="@+id/customerEmail"
            style="@style/matchParentText"
            android:text="Email Address"
            />


        <EditText
            android:id="@+id/txtUserEmail"
            style="@style/EditTextUserEmail"
           />
        <TextView
            android:id="@+id/customerPhone"
            style="@style/matchParentText"
            android:text="Phone Number"

            />

        <EditText
            android:id="@+id/txtUsePhone"
            style="@style/EditTxtUserPhone"
            />

        <TextView
            android:id="@+id/customerStreet"
            style="@style/matchParentText"
            android:text="Street Name"
            />

        <EditText
            android:id="@+id/txtUserStreet"
            style="@style/EditTextUserStreet"
            android:gravity="left"
            />


    </LinearLayout>

    <!--End Personal Information ( Name-Email-Phone-Street ) -->



    <!--Starts Layout Apartment and Zip code ) -->
    <LinearLayout
        android:id="@+id/userAptAndZipCodeLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personalInformation">


            <TextView
                android:id="@+id/customerAptTextView"
                style="@style/CommentText"
                android:layout_width="0dp"
                android:text="Apt"
                android:layout_weight=".20"
                android:layout_height="30dp" />

            <EditText
                android:id="@+id/txtUserApt"
                style="@style/EditTextUserApt"
                android:gravity="left"

                android:layout_weight=".35"
                android:layout_height="30dp" />


            <TextView
                android:id="@+id/customerZipCodeTextView"
                style="@style/CommentText"
                android:layout_width="0dp"
                android:text="Zip"

                android:layout_weight=".20"
                android:layout_height="30dp" />

            <EditText
                android:id="@+id/txtUserPostCode"
                style="@style/EditTextUserPostCode"
                android:gravity="left"
                android:layout_weight="0.30"
                android:layout_height="30dp" />



    </LinearLayout>

    <!--Ends Layout Apartment and Zip code ) -->




    <LinearLayout
        android:id="@+id/customerZipCodeAndCityLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userAptAndZipCodeLayout">


            <TextView
                android:id="@+id/customerPostalCode"
                style="@style/CommentText"
                android:text="City"
                android:layout_weight=".20"
                android:layout_height="30dp" />

            <EditText
                android:id="@+id/txtUserCity"
                style="@style/EditTextUserCity"
                android:gravity="left"
                android:layout_weight=".30"
                android:layout_height="30dp"
               />

            <TextView
                android:id="@+id/customerProvienceTextView"
                style="@style/CommentText"
                android:text="Provience"
                android:layout_weight=".27"
                android:layout_height="30dp" />

            <Spinner
                android:id="@+id/spinner1"
                android:entries="@array/provience_arrays"
                style="@style/spinnerPayMethod"
                android:layout_weight="0.23"
                android:layout_height="30dp"
                 />



        </LinearLayout>





    <!--Personal Information Ends-->


    <!--Change password and payment Info Buttons-->


    <LinearLayout
        android:id="@+id/popUpChange"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customerZipCodeAndCityLayout">


        <Button
            android:id="@+id/btnPaymentInfo"
            style="@style/PaymentInformation"
            android:text="@string/btnPaymentInfo"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            />
        <Button
            android:id="@+id/btnPasswordChange"
            style="@style/PasswordChanges"
            android:text="@string/btnChangePass"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            />


    </LinearLayout>

    <!--Change password Starts-->
    <LinearLayout
        android:id="@+id/getNewPassword"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popUpChange">

        <TextView
            android:id="@+id/customerOldPassTextView"
            style="@style/matchParentText"
            android:text="Type Your Old Password"
            />

        <EditText
        android:id="@+id/txtOldPassword"
        style="@style/EditTextOldPassword" />
        <TextView
            android:id="@+id/customerNewPassTextView"
            style="@style/matchParentText"
            android:text="Type Your New Password"
            />

        <EditText
            android:id="@+id/txtNewPassword"
            style="@style/EditTextNewPassword" />
        <TextView
            android:id="@+id/customerReEnterPass"
            style="@style/matchParentText"
            android:text="Email Address"
            />

        <EditText
            android:id="@+id/txtRePassword"
            style="@style/EditTextReEnterPassword" />

        <Button
            android:id="@+id/btnCreateNewPassword"
            style="@style/PaymentInformation"
            android:text="@string/btnChangePass"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:gravity="center" />

        </LinearLayout>

    <!--Payment Information Data Starts-->
    <LinearLayout
        android:id="@+id/paymentInfo"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getNewPassword">

        <TextView
            android:id="@+id/txtPayMethod"
            style="@style/matchParentText"
            android:text="Select a pay method"/>

        <Spinner
            android:id="@+id/paymentMethod"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:entries="@array/cardType_arrays"
            style="@style/spinnerPayMethod"
            />

        <TextView
            android:id="@+id/txtCardHolderName"
            style="@style/matchParentText"
            android:text="Name on Card"/>

        <EditText
            android:id="@+id/txtNmeOnCard"
            style="@style/EditTextNameOnCard"
            />
        <TextView
            android:id="@+id/txtCardNumberLabel"
            style="@style/matchParentText"
            android:text="Card Number"/>


        <EditText
            android:id="@+id/txtCardNumber"
            style="@style/EditTextCardNumber"
            />

        <TextView
            android:id="@+id/txtCardExpireMonthAndYear"
            style="@style/matchParentText"
            android:text="Expire Date"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/paymentInfoExpire"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/paymentInfo"
        android:layout_marginBottom="20dp">

        <Spinner
            android:id="@+id/txtExpMonthTextView"
            android:layout_weight=".30"
            android:layout_height="30dp"
            android:entries="@array/month_arrays"
            android:layout_below="@+id/txtCardExpireMonthAndYear"
            style="@style/spinner_style_expiry" />

        <Spinner
            android:id="@+id/txtExpYear"
            android:layout_weight=".30"
            android:layout_height="30dp"
            android:entries="@array/year_arrays"
            android:orientation="horizontal"
            style="@style/spinner_style_expiry"

            />

        <EditText
            android:id="@+id/txtSecureCode"
            style="@style/EditTextSecurityCode"
            android:layout_below="@+id/txtSecureCode"/>



    </LinearLayout>



        <Button
            android:id="@+id/btnSavePersonalInfo"
            style="@style/SaveChanges"
            android:text="@string/btnSave"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/paymentInfoExpire"
            />
















</RelativeLayout>

</ScrollView>
